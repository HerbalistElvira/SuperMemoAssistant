<xamlControls:XamlControlBase
  x:Class="SuperMemoAssistant.SuperMemo.SuperMemo17.Content.Layout.XamlControls.XamlControlHtml"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:xamlControls="clr-namespace:SuperMemoAssistant.SuperMemo.SuperMemo17.Content.Layout.XamlControls"
  xmlns:fa5="http://schemas.fontawesome.com/icons/"
  DataContext="{Binding RelativeSource={RelativeSource Self}}"
  d:DataContext="{d:DesignInstance xamlControls:XamlControlHtml}"
  mc:Ignorable="d">
  <Border BorderThickness="1"
          BorderBrush="#E3E3E3">
    <Border BorderThickness="6"
            BorderBrush="#F4F7FC">
      <Grid>
        <TextBox FontSize="300" TextWrapping="Wrap" Text="{Binding Html}" />

        <StackPanel VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Orientation="Vertical">
          <fa5:SvgAwesome Width="500"
                          Height="500"
                          Icon="Solid_Code" />
          <TextBlock FontSize="450"
                     Text="Html" />
        </StackPanel>
      </Grid>
    </Border>
  </Border>
</xamlControls:XamlControlBase>
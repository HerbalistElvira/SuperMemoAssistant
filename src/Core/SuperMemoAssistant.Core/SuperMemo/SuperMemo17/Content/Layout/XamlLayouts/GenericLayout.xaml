<Grid
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:sma="clr-namespace:SuperMemoAssistant.SuperMemo.SuperMemo17.Content.Layout.XamlControls"
  Margin="100 100 120 300">
  <Grid.RowDefinitions>
    <RowDefinition Height="*" />
    <RowDefinition Height="auto" />
  </Grid.RowDefinitions>

  <Grid.ColumnDefinitions>
    <ColumnDefinition Width="*" />
    <ColumnDefinition Width="*" />
  </Grid.ColumnDefinitions>

  <!--Text container-->
  <sma:AutoGrid Grid.Row="0"
                Grid.Column="0"
                sma:Container.AcceptedContent="Text" />

  <!--Image container-->
  <sma:AutoGrid Grid.Row="0"
                Grid.Column="1"
                sma:Container.AcceptedContent="Image" />

  <!--Sound container-->
  <sma:AutoGrid Grid.Row="1"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                sma:Container.AcceptedContent="Sound" />
</Grid>